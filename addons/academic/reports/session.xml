<odoo>
<data>

    <record id="action_report_academic_session" model="ir.actions.report">
        <field name="name">Session</field>
        <field name="model">academic.session</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">academic.academic_session_report</field> <!-- nama id template yg akan dibuka nanti-->
        <field name="report_file">academic.academic_session_report</field>
        <field name="print_report_name">object.name</field>
        <field name="binding_model_id" ref="academic.model_academic_session" />
        <field name="binding_type">report</field>
    </record>

    <template id="academic_session_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="academic.academic_session_report_document" />
            </t>
        </t>
    </template>

    <template id="academic_session_report_document">        <!-- isi daleman print out nya -->
        <t t-call="web.external_layout">                <!-- layout report standartnya odoo -->
            <t t-set="doc" t-value="doc.with_context({'lang':doc.instructor_id.lang})"/>    <!-- print out akan mengikuti bahasa set instructor_id-->

            <div class="page">
                <h2>SESSSION: <span t-field="doc.name" /></h2>

                <table class="table table-condensed">
                    <tr>
                        <td>Course</td>
                        <th><span t-field="doc.course_id"/></th>

                        <td>Instructor</td>
                        <th><span t-field="doc.instructor_id"/></th>
                    </tr>

                    <tr>
                        <td>Start date</td>
                        <th><span t-field="doc.start_date"/></th>

                        <td>Duration</td>
                        <th><span t-field="doc.duration"/></th>
                    </tr>

                    <tr>
                        <td>Taken Seats</td>
                        <td><span t-field="doc.taken_seats"/></td>

                        <td>Active</td>
                        <td><span t-field="doc.active" /></td>
                    </tr>
                </table>

                <!-- table attendees -->
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Partner</th>
                            <th>Signed</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr t-foreach="doc.attendee_ids" t-as="att">
                            <td><span t-field="att.name"/></td>
                            <td><span t-field="att.partner_id"/></td>
                            <td>................</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</data>
</odoo>