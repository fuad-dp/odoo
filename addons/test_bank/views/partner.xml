<odoo>
<data>

    <record model="ir.ui.view" id="partner_bank_accounts">
      <field name="name">partner_bank_accounts</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <notebook position="inside">
            <page string="Bank Accounts">
                <!-- <field name="bank_account_ids"/>  kalau hanya menampilkan semua field tanpa filter maka begini saja cukup -->
                <field name="bank_account_ids">
                    <tree>
                        <field name="acc_number"/>
                        <field name="partner_id"/>
                        <field name="bank_name"/>
                    </tree>
                </field>
            </page>
        </notebook>
      </field>
    </record>

</data>
</odoo>