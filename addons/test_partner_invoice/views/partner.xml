<odoo>
<data>
    <record model="ir.ui.view" id="partner_invoice_form">
      <field name="name">partner_invoice_form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@name='button_box']" position="inside">    <!-- mencari element div dengan nama button_box-->
            <button name="action_create_invoice" type="object" string="Create Invoice"/>
        </xpath>
      </field>
    </record>


    <!-- action context menu -->
    <record id="action_create_invoice" model="ir.actions.server">
        <field name="name">Create Invoice</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="state">code</field>
        <field name="code"><![CDATA[
            if records:     
                action = records.action_create_invoice()
        ]]></field>
    </record>

</data>
</odoo>